
@{
    ViewBag.Title = "訂位首頁(會員)";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<style>
    .jumbotron {
        background-color: #EBCBAE;
    }
</style>


<div class="jumbotron mt-4">

        <h1 class="display-4">Grab life by the fork!</h1>
        <h6 class="lead">Reserve a restaurant today, enjoy the cuisine with your loved ones!(or yourself)</h6>
        <hr class="my-4">
        <p>Click to search the best restaurant!</p>
    @Html.ActionLink("點我訂餐", "RestaurantList", new { area = "" }, new { @class = "btn btn-primary btn-lg buttonColor" })
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Photos/foodpics2.jpg" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Photos/foodpics1.jpg" class="d-block w-100" alt="..." />
        </div>
        <div class="carousel-item">
            <img src="~/Photos/foodpics3.jpg" class="d-block w-100" alt="..." />
        </div>
        <div class="carousel-item">
            <img src="~/Photos/foodpics4.jpg" class="d-block w-100" alt="..." />
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>




