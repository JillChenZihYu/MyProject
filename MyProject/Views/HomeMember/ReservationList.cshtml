@model IEnumerable<MyProject.Models.Reserves>

@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<h2 class="mt-4">訂位紀錄</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurants.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Child)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Members.Name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
            @*@DateTime.Parse(item.Date.ToString()).ToShortDateString()*@
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Restaurants.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Child)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Members.Name)
        </td>

        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.ReservationID }, new { @class = "btn-primary btn-sm mr-2" })
            @*@Html.ActionLink("Details", "Details", new { id = item.ReservationID }) |*@
            @Html.ActionLink("刪除", "Delete", new { id = item.ReservationID }, new { @class = "btn-light btn-sm mr-2" })
        </td>
    </tr>
}

</table>
